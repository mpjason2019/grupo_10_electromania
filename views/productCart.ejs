<%- include('partials/head')  %> 
<body class="cart-page">
    <header>
        <div class="top-header-login">
            
            <h2 class="nombre-login">electromania</h2>
            <div class="logo-login">
                <a href="/"><img src="/images/favicon.JPG" class="logo"></a>
            </div>
       </div> 
    
      </header>
    <main class="cart-page">
        <h2 class="cart-title">Carrito de Compras</h2>
        <hr class="divider-line">
        <section>
            <div class="login-request">
                <p class="login-buy">Registrate o inicia sesión para acceder a beneficios y comprar más comodamente</p>
                <a class="usario-login" href="/usuarios/login"><p class="login-buy-button">INGRESA</p></a>
            </div>
            <div class="main-product-container">
                <div class="product-summary">
                    <div class="cart-item-details">
                        <img src="/images/pc.jpg" class="product-cart">
                        <div class="product-details">
                            <h3 class="model">Notebook ASUS 17"</h3>
                            <div class="price-info">
                                <div class="buy-titles">Precio:</div>   
                                <p class="buy-details">$104.000</p>
                            </div>
                            <div class="quantity-info">
                                <div class="buy-titles">Cantidad:</div>   
                                <form action="" method="">
                                    <select name="quantity-product" id="quantity">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                </form>
                            </div> 
                            <div class="price-info">
                                <div class="buy-titles">Subtotal:</div>   
                                <p class="buy-details">$104.000</p>
                            </div> 
                        </div>
                    </div>
                    <div class="cart-item-details">
                        <img src="/images/tablet2.webp" class="product-cart">
                        <div class="product-details">
                            <h3 class="model">Tablet Samsung 7""</h3>
                            <div class="price-info">
                                <div class="buy-titles">Precio:</div>   
                                <p class="buy-details">$45.000</p>
                            </div>
                            <div class="quantity-info">
                                <div class="buy-titles">Cantidad:</div>   
                                <form action="" method="">
                                    <select name="quantity-product" id="quantity">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                </form>
                            </div> 
                            <div class="price-info">
                                <div class="buy-titles">Subtotal:</div>   
                                <p class="buy-details">$45.000</p>
                            </div> 
                        </div>
                    </div>
                </div>
                <div class="product-summary2">
                    <div class="main-final-payment">
                        <p class="payment-titles">¿Desea extender garantia?</p>
                        <form action="" method="">
                            <input class="guarantee-choose" type="radio" name="guarantee" id="guarantee" value="Con Garantia">Si
                            <input class="guarantee-choose" type="radio" name="guarantee" id="guarantee" value="Sin Garantia">No
                        </form>
                    </div>
                    <div class="main-final-payment-total">
                        <p class="payment-titles">TOTAL</p>
                        <p class="buy-details important">$149.000</p>
                    </div>
                    <div class="payment-titles margins">¿Tenés un cupon?</div>
                    <p class="buy-coupon">Ingresa un cupon de descuento</p>
                    <div class="boton-comprar">
                        <a href="/"><input class="boton-comprar" type="submit" class="submit" value="Comprar"></a>
                    </div>
                </div>
            </div>
            <div class="purchase-advantages">
                <div class="secure-purchase">
                    <div class="secure-icon"><i class="fas fa-lock"></i></div>
                    <p class="secure-info">Compra 100% segura</p>
                    <p class="secure-details">Tu informacion está protegida</p>
                </div>
                <div class="secure-purchase">
                    <div class="secure-icon"><i class="fas fa-truck"></i></div>
                    <p class="secure-info">Envio gratis</p>
                    <p class="secure-details">A todo el pais</p>
                </div>
                <div class="secure-purchase">
                    <div class="secure-icon"><i class="fas fa-exchange-alt"></i></div>
                    <p class="secure-info">Devolucion 30 dias</p>
                    <p class="secure-details">No te gusta, devolvelo gratis</p>
                </div>
            </div>
        </div> 
        <br>
        </section>
    </main>
    <%- include('partials/footer')  %> 
</body>
</html>